{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
  },
  "include": ["src/**/*", "tests/core/KernelBuilder.test.ts", "tests/interfaces/IServiceCollection.test.ts", "tests/interfaces/IKernelBuilder.test.ts", "tests/services/ServiceCollection.test.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
